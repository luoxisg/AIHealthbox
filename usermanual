    if (socCtx) {
        new Chart(socCtx, {
            type: 'bar',
            data: {
                labels: ['AI æ€§èƒ½ (TOPS)', 'æœ€é«˜æ˜¾ç¤ºè¾“å‡º', wrapLabel('8Kè§†é¢‘è§£ç èƒ½åŠ›')],
                datasets: [{
                    label: 'Aura (RK3588)',
