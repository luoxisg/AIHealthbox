<script>
document.addEventListener('DOMContentLoaded', () => {

    const wrapLabel = (label, maxLength = 16) => {
        if (typeof label !== 'string' || label.length <= maxLength) {
            return label;
        }
        const words = label.split(' ');
        let lines = [];
        let currentLine = '';
        words.forEach(word => {
            if ((currentLine + ' ' + word).trim().length > maxLength) {
                lines.push(currentLine.trim());
                currentLine = word;
            } else {
                currentLine = (currentLine + ' ' + word).trim();
            }
        });
        if (currentLine) {
            lines.push(currentLine.trim());
        }
        return lines;
    };
    
    const tooltipTitleCallback = (tooltipItems) => {
        const item = tooltipItems[0];
        if (!item) return '';
        let label = item.chart.data.labels[item.dataIndex];
        if (Array.isArray(label)) {
            return label.join(' ');
        }
        return label;
    };

    const commonChartOptions = {
        maintainAspectRatio: false,
        responsive: true,
        plugins: {
            legend: {
                labels: {
                    color: '#4b5563',
                    font: {
                        family: "'Noto Sans SC', sans-serif",
                        size: 12,
                    }
                }
            },
            tooltip: {
                backgroundColor: '#111827',
                titleColor: '#ffffff',
                bodyColor: '#d1d5db',
                titleFont: {
                    family: "'Noto Sans SC', sans-serif",
                    weight: 'bold',
                },
                bodyFont: {
                    family: "'Noto Sans SC', sans-serif",
                },
                callbacks: {
                    title: tooltipTitleCallback
                }
            }
        },
        scales: {
            x: {
                ticks: {
                    color: '#4b5563',
                    font: {
                        family: "'Noto Sans SC', sans-serif",
                    }
                },
                grid: {
                    display: false
                }
            },
            y: {
                ticks: {
                    color: '#4b5563',
                    font: {
                        family: "'Noto Sans SC', sans-serif",
                    }
                },
                 grid: {
                    color: '#e5e7eb'
                }
            }
        }
    };
    
    const socCtx = document.getElementById('socComparisonChart')?.getContext('2d');
    if (socCtx) {
        new Chart(socCtx, {
            type: 'bar',
            data: {
                labels: ['AI 性能 (TOPS)', '最高显示输出', wrapLabel('8K视频解码能力')],
                datasets: [{
                    label: 'Aura (RK3588)',
                    data: [6, 10, 10], 
                    backgroundColor: '#0077B6',
                    borderRadius: 4,
                }, {
                    label: '竞品 A (NVIDIA Jetson)',
                    data: [20, 5, 5], 
                    backgroundColor: '#00B4D8',
                    borderRadius: 4,
                }, {
                    label: '竞品 B (Qualcomm QRB5165)',
                    data: [15, 5, 10], 
                    backgroundColor: '#90E0EF',
                    borderRadius: 4,
                }]
            },
            options: { ...commonChartOptions,
                indexAxis: 'y',
                 plugins: {
                    ...commonChartOptions.plugins,
                    tooltip: {
                        ...commonChartOptions.plugins.tooltip,
                        callbacks: {
                            ...commonChartOptions.plugins.tooltip.callbacks,
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.x !== null) {
                                    const rawLabel = Array.isArray(context.label) ? context.label.join(' ') : context.label;
                                    if (rawLabel.includes('TOPS')) {
                                         label += `${context.parsed.x} TOPS`;
                                    } else if (rawLabel.includes('显示')) {
                                         label += (context.parsed.x / 10 * 8) + 'K @ 60Hz';
                                    } else if (rawLabel.includes('解码')) {
                                         label += (context.parsed.x / 10 * 8) + 'K @ 60fps';
                                    } else {
                                        label += context.parsed.x;
                                    }
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                         ...commonChartOptions.scales.y,
                         ticks: {
                            ...commonChartOptions.scales.y.ticks,
                            font: { size: 14 }
                         }
                    },
                    x: {
                        ...commonChartOptions.scales.x,
                        ticks: {
                           display: false
                        }
                    }
                }
            }
        });
    }

    const modelCtx = document.getElementById('modelComparisonChart')?.getContext('2d');
    if (modelCtx) {
        new Chart(modelCtx, {
            type: 'bubble',
            data: {
                datasets: [
                    {
                        label: '传统云端大模型',
                        data: [{ x: 2, y: 2, r: 40 }],
                        backgroundColor: 'rgba(239, 68, 68, 0.6)',
                        borderColor: 'rgb(239, 68, 68)'
                    },
                    {
                        label: 'Aura 端侧 MoE 模型',
                        data: [{ x: 9, y: 9, r: 15 }],
                        backgroundColor: 'rgba(0, 119, 182, 0.7)',
                        borderColor: '#0077B6'
                    },
                    {
                        label: 'Aura 端侧 SLM 模型',
                        data: [{ x: 8, y: 9, r: 10 }],
                        backgroundColor: 'rgba(0, 180, 216, 0.7)',
                        borderColor: '#00B4D8'
                    }
                ]
            },
            options: {
                ...commonChartOptions,
                plugins: {
                    ...commonChartOptions.plugins,
                    tooltip: {
                         ...commonChartOptions.plugins.tooltip,
                         callbacks: {
                            title: function() { return ''; },
                            label: function(context) {
                                return context.dataset.label;
                            }
                         }
                    }
                },
                scales: {
                    x: {
                        title: { display: true, text: '低延迟 →', color: '#374151', font: {size: 14, weight: 'bold'} },
                        min: 0,
                        max: 10,
                        ticks: { display: false },
                        grid: { display: false }
                    },
                    y: {
                        title: { display: true, text: '高隐私 →', color: '#374151', font: {size: 14, weight: 'bold'} },
                        min: 0,
                        max: 10,
                        ticks: { display: false },
                        grid: { display: false }
                    }
                }
            }
        });
    }
    
    const healthScoreCtx = document.getElementById('healthScoreChart')?.getContext('2d');
    if (healthScoreCtx) {
        new Chart(healthScoreCtx, {
            type: 'doughnut',
            data: {
                labels: ['睡眠分数', '活动分数', '准备度分数'],
                datasets: [{
                    data: [45, 35, 20],
                    backgroundColor: ['#0077B6', '#00B4D8', '#90E0EF'],
                    borderColor: '#FFFFFF',
                    borderWidth: 4,
                }]
            },
            options: {
                ...commonChartOptions,
                cutout: '60%',
                plugins: {
                    ...commonChartOptions.plugins,
                    legend: {
                        position: 'bottom',
                    },
                },
                scales: {
                    x: { display: false },
                    y: { display: false }
                }
            }
        });
    }

    const sleepTrendCtx = document.getElementById('sleepTrendChart')?.getContext('2d');
    if (sleepTrendCtx) {
        new Chart(sleepTrendCtx, {
            type: 'line',
            data: {
                labels: ['第一周', '第二周', '第三周', '第四周'],
                datasets: [{
                    label: '平均睡眠分数',
                    data: [78, 75, 82, 85],
                    borderColor: '#0077B6',
                    backgroundColor: 'rgba(0, 119, 182, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#0077B6',
                    pointRadius: 5
                }]
            },
            options: {
                ...commonChartOptions,
                scales: {
                    ...commonChartOptions.scales,
                    y: {
                        ...commonChartOptions.scales.y,
                        beginAtZero: false,
                        min: 60,
                        max: 100
                    }
                }
            }
        });
    }
});
</script>
</body>
</html>
